{%- style -%}
  .tji-hero-wrapper-{{ section.id }} {
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.section_main_bg }};
  }

  .tji-content-col-{{ section.id }} {
    flex: 0 0 50%;
    padding: 60px 46px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: {{ section.settings.left_gradient }};
  }

  .tji-image-col-{{ section.id }} {
    flex: 0 0 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .tji-image-col-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Image ko area cover karne ke liye */
    display: block;
  }

  .tji-label {
    background: #2E1947;
    color: #ffffff;
    padding: 0px 10px;
    display: inline-block;
    font-size: 16px;
    font-weight: bold;
    border-radius: 4px;
    margin-bottom: 10px;
    align-self: flex-start;
    line-height: 40px;
    letter-spacing: 2px;
}
  .tji-title {
    font-size: 104px;
    ffont-family: 'Anton', sans-serif !important; 
    color: #ffffff;
    text-transform: uppercase;
    line-height: 99.4px;
    margin-top: 0px;
    margin-bottom: 15px;
    -webkit-text-stroke: 3px #AF1F5C;
    text-shadow: 11px 6px 0px #B01F5D;
    font-weight: 400;
    word-wrap: break-word;
    letter-spacing: 0px;
  }

 .tji-description {
    font-size: 18px;
    line-height: 30px;
    font-weight: 400;
    color: #2E1947;
    text-transform: capitalize;
    margin-bottom: 25px;
}

 .tji-btn {
    background: #2E1947;
    color: #ffffff;
    padding: 0px 30px;
    text-decoration: none;
    border-radius: 70px;
    font-size: 48px;
    font-weight: 400;
    display: inline-block;
    width: fit-content;
    text-align: center;
    /* line-height: 120px; */
    text-transform: uppercase;
}

  @media (max-width: 990px) {
    .tji-content-col-{{ section.id }}, 
    .tji-image-col-{{ section.id }} {
      flex: 0 0 100%; /* Mobile par full width */
    }
    .tji-hero-wrapper-{{ section.id }} {
      /* flex-direction: column-reverse; */
      text-align: center;
    }
    .tji-content-col-{{ section.id }} {
      padding: 40px 20px;
    }
    .tji-label {
      margin: auto;
    }
    .tji-title {
      font-size: 58px; 
    }
    .tji-btn {
      font-size: 34px;
      width: unset;
    }
  }
{%- endstyle -%}

<section class="tji-hero-wrapper-{{ section.id }}">
  <div class="tji-content-col-{{ section.id }}">
    {% if section.settings.sub_label != blank %}
      <span class="tji-label">{{ section.settings.sub_label }}</span>
    {% endif %}
    
    <h1 class="tji-title">{{ section.settings.heading }}</h1>
    
    <div class="tji-description">
      {{ section.settings.text }}
    </div>

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="tji-btn cus_font_anton">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>

  <div class="tji-image-col-{{ section.id }}">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url: '1200x' }}" alt="{{ section.settings.heading }}">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "TJI Equal Hero Section",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    },
    {
      "type": "text",
      "id": "sub_label",
      "label": "Small Label",
      "default": "JAM BY JOSH"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "HEY, I'M JOSH!"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#d12e5e"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>I Started Jam By Josh When I Was Just Ten Years Old...</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "KEEP READIN"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Background & Spacing"
    },
    {
      "type": "color_background",
      "id": "left_gradient",
      "label": "Left Side Gradient",
      "default": "linear-gradient(180deg, #f3f3f3 0%, #ffffff 100%)"
    },
    {
      "type": "color",
      "id": "section_main_bg",
      "label": "Section Main Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "label_bg_color",
      "label": "Label Color",
      "default": "#2a1a4a"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "TJI Equal Hero Section"
    }
  ]
}
{% endschema %}
