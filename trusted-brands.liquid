    },
    {
      "type": "select",
      "id": "icon_horizontal_pos",
      "label": "Horizontal Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "right"
    },
    {
      "type": "number",
      "id": "icon_horizontal_dist",
      "label": "Horizontal Distance (px)",
      "default": 20
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label",
      "default": "Unlock My Pass"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background",
      "default": "#331a20"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_logo",
          "label": "Brand Logo"
        },
        {
          "type": "range",
          "id": "logo_width",
          "min": 50,
          "max": 900,
          "step": 10,
          "unit": "px",
          "label": "Desktop Logo Width",
          "default": 150
        },
        {
          "type": "range",
          "id": "logo_width_mobile",
          "min": 40,
          "max": 900,
          "step": 10,
          "unit": "px",
          "label": "Mobile Logo Width",
          "default": 100
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Full Width Brands Grid",
      "blocks": [
        { "type": "brand" },
        { "type": "brand" },
        { "type": "brand" },
        { "type": "brand" }
      ]
    }
  ]
}
{% endschema %}
