<div class="ll-form-wrapper">
  <div class="ll-form-container">
    <h3 class="ll-form-heading">Get on the list.</h3>
    
    {%- form 'customer', id: 'LastLookContactForm', class: 'll-shopify-form' -%}
      
      {%- if form.posted_successfully? -%}
        <div class="ll-success-message">
          <p>Success! You're on the list.</p>
        </div>
      {%- else -%}
        
        {%- if form.errors -%}
          <div class="ll-error-message">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        <div class="ll-input-row">
          <input 
            type="text" 
            name="contact[first_name]" 
            id="ll-name" 
            placeholder="Name" 
            required
          >
        </div>

        <div class="ll-input-inline-group">
          <input 
            type="email" 
            name="contact[email]" 
            id="ll-email" 
            placeholder="Email" 
            required
            spellcheck="false"
            autocomplete="off"
            autocapitalize="off"
          >
          <button type="submit" class="ll-submit-btn">
            Unlock My Pass
          </button>
        </div>

        <input type="hidden" name="contact[tags]" value="newsletter, lastlook_warehouse_sale">
      {%- endif -%}
      
    {%- endform -%}
  </div>
</div>

