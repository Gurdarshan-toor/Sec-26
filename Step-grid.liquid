{%- style -%}
  .wor-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: 30px;
    padding-right: 30px;
    text-align: center;
    color: {{ section.settings.text_color }};
    position: relative;
    overflow: hidden;
  }

  /* Floating Icon with Prefix */
  .wor-floating-icon {
    position: absolute;
    width: {{ section.settings.icon_width }}px;
    height: auto;
    top: {{ section.settings.icon_top }}%;
    left: {{ section.settings.icon_left }}%;
    transform: translate(-50%, -50%) rotate({{ section.settings.icon_rotate }}deg);
    z-index: 1;
    pointer-events: none;
  }

  .wor-hiw-title {
    font-size: 45px;
    font-weight: 700;
    margin-bottom: 20px;
    position: relative;
    z-index: 2;
  }

  .wor-hiw-grid {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 0 auto;
    gap: 40px;
    position: relative;
    z-index: 2;
  }

  .wor-hiw-item {
    flex: 1;
    min-width: 280px;
    max-width: 350px;
    text-align: left;
  }

  .wor-hiw-step-label {
    font-size: 45px;
    font-weight: 700;
    display: block;
    color: #F6BDCC;
  }

  .wor-hiw-icon-img {
    width: 86px;
    height: 115px;
    margin-bottom: 25px;
    object-fit: contain;
  }

  .wor-hiw-heading {
    font-size: 27px;
    font-weight: 700;
    margin-bottom: 15px;
    text-transform: capitalize;
  }

  .wor-hiw-text {
    font-size: 20px;
    line-height: 114%;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .wor-section-{{ section.id }} {
      padding-top: 50px;
      padding-bottom: 0px;
    }
    .wor-hiw-grid { flex-direction: column; align-items: center; gap: 0px; }
    .wor-hiw-item { text-align: center; margin-bottom: 30px; }
    .wor-hiw-icon-img { width: 100%; }
    .wor-hiw-heading { font-size: 30px; }
    .wor-floating-icon { top: 2%; left: 88%; }
  }
{%- endstyle -%}

<div class="wor-section-{{ section.id }}">
  
  {%- if section.settings.floating_image != blank -%}
    <div class="wor-floating-icon">
      {{ section.settings.floating_image | image_url: width: 200 | image_tag: loading: 'lazy' }}
    </div>
  {%- endif -%}

  <h2 class="wor-hiw-title">{{ section.settings.main_title }}</h2>
  
  <div class="wor-hiw-grid">
    {%- for block in section.blocks -%}
      <div class="wor-hiw-item" {{ block.shopify_attributes }}>
        <span class="wor-hiw-step-label">Step {{ forloop.index }}</span>
        
        {%- if block.settings.image != blank -%}
          {{ block.settings.image | image_url: width: 150 | image_tag: class: 'wor-hiw-icon-img', loading: 'lazy' }}
        {%- endif -%}

        <h3 class="wor-hiw-heading">{{ block.settings.heading }}</h3>
        <div class="wor-hiw-text">{{ block.settings.text }}</div>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "How It Works (Wor)",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "How it Works"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f1889f"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#2b0a1d"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 80
    },
    {
      "type": "header",
      "content": "Floating Corner Icon"
    },
    {
      "type": "image_picker",
      "id": "floating_image",
      "label": "Floating Icon Image"
    },
    {
      "type": "range",
      "id": "icon_width",
      "min": 20,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Icon Size",
      "default": 50
    },
    {
      "type": "range",
      "id": "icon_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Vertical Position (Top to Bottom)",
      "default": 10
    },
    {
      "type": "range",
      "id": "icon_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Horizontal Position (Left to Right)",
      "default": 90
    },
    {
      "type": "range",
      "id": "icon_rotate",
      "min": 0,
      "max": 360,
      "step": 5,
      "unit": "deg",
      "label": "Icon Rotation",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Step Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Step Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Add your description here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How It Works (Wor)",
      "blocks": [
        { "type": "step" },
        { "type": "step" },
        { "type": "step" }
      ]
    }
  ]
}
{% endschema %}
