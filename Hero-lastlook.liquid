{%- style -%}
  .ban-hero-section-{{ section.id }} {
    /* Desktop Background Settings */
    background-image: url('{{ section.settings.bg_image | image_url: width: 2000 }}');
    background-repeat: no-repeat;
    background-position: {{ section.settings.bg_pos_desktop }};
    background-size: cover;
    
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: 20px;
    padding-right: 20px;
    text-align: center;
    color: #ffffff;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ban-main-logo-img {
    width: {{ section.settings.logo_width }}px;
    max-width: 100%;
    height: auto;
    margin-bottom: 30px;
    display: inline-block;
  }

  .ban-headline-text {
    font-size: 48px;
    margin-bottom: 25px;
    line-height: 1.2;
    color: #F6BDCC;
    font-weight: 600;
  }

  /* --- Seamless Slider Logic --- */
  .ban-footer-wrapper {
    width: 100vw;
    margin-left: calc(50% - 50vw);
    overflow: hidden;
    position: relative;
    margin-top: 45px;
    margin-bottom: 15px;
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }

  .ban-brands-footer {
    display: flex;
    width: max-content; 
    align-items: center;
    will-change: transform;
    transform: translate3d(0, 0, 0);
    animation: ban-marquee {{ section.settings.slider_speed }}s linear infinite;
  }

  .ban-brand-item {
    flex-shrink: 0;
    padding: 0 50px;
  }

  .ban-brand-item img {
    height: auto;
    display: block;
    filter: brightness(0) invert(1);
    backface-visibility: hidden;
  }

  @keyframes ban-marquee {
    0% { transform: translate3d(0, 0, 0); }
    100% { transform: translate3d(-25%, 0, 0); } 
  }

  /* --- Mobile Responsive Settings --- */
  @media (max-width: 767px) {
    .ban-hero-section-{{ section.id }} {
      {% if section.settings.bg_image_mobile != blank %}
        background-image: url('{{ section.settings.bg_image_mobile | image_url: width: 800 }}');
      {% endif %}
      background-position: {{ section.settings.bg_pos_mobile }};
      
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
      padding-inline: 12px;
    }

    .ban-headline-text { font-size: 30px; margin-bottom: 0; }
    .ban-brand-item { padding: 0 25px; }
    .ban-footer-wrapper { margin-top: 10px; }
    .ban-form-container { width: 100%; }
    .ban-main-logo-img { margin-bottom: 20px; }
  }
{%- endstyle -%}

<section class="ban-hero-section-{{ section.id }}">
  {% if section.settings.main_logo %}
    <img src="{{ section.settings.main_logo | image_url: width: 1500 }}" class="ban-main-logo-img" alt="Main Logo">
  {% endif %}

  <div class="ban-headline-text">{{ section.settings.headline }}</div>

  <div class="ban-form-container">
    {% render 'custom-lastlook-form' %}
  </div>

  <div class="ban-footer-wrapper">
    <div class="ban-brands-footer">
      {% capture logo_set %}
        {% for block in section.blocks %}
          <div class="ban-brand-item" {{ block.shopify_attributes }}>
            {% if block.settings.brand_img %}
              <style>
                .ban-img-{{ block.id }} { width: {{ block.settings.brand_width }}px !important; }
                @media (max-width: 767px) {
                  .ban-img-{{ block.id }} { width: {{ block.settings.brand_width_mobile }}px !important; }
                }
              </style>
              <img src="{{ block.settings.brand_img | image_url: width: 400 }}" 
                   alt="Brand logo" 
                   class="ban-img-{{ block.id }}">
            {% endif %}
          </div>
        {% endfor %}
      {% endcapture %}

      {{ logo_set }}{{ logo_set }}{{ logo_set }}{{ logo_set }}
    </div>
  </div>
</section>

