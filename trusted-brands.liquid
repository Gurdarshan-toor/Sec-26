{%- style -%}
  /* Section Wrapper */
  .trust-trusted-brands-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  .trust-brand-container-full {
    width: 100%;
    text-align: center;
    position: relative;
  }
  .trust-brand-title {
    max-width: 780px;
    margin: 0 auto 30px auto;
    font-size: {{ section.settings.title_size }}px;
    font-weight: bold;
    color: {{ section.settings.text_color }};
    padding: 0 20px;
  }
  
  /* Grid Layout */
  .trust-brand-grid {
    display: flex;
    width: 100%;
    background: #fff;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    align-items: stretch;
    margin: 0;
    padding: 0;
  }
  .trust-brand-item {
    flex: 1;
    border-right: 2px solid #000;
    border-top: 2px solid #000;
    border-bottom: 2px solid #000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30px 15px;
    min-height: 100px;
  }
  .trust-brand-item:last-child {
    border-right: none;
  }
  
  /* Individual Image Width handling */
  {% for block in section.blocks %}
    .trust-brand-img-{{ block.id }} {
      width: {{ block.settings.logo_width }}px;
      max-width: 100%; 
      height: auto;
      object-fit: contain;
    }
    @media screen and (max-width: 768px) {
      .trust-brand-img-{{ block.id }} {
        width: {{ block.settings.logo_width_mobile }}px;
      }
    }
  {% endfor %}

  /* Button Styling */
  .trust-brand-button-wrapper {
    margin-top: 30px;
  }
  .trust-brand-btn {
    background-color: {{ section.settings.btn_bg_color }};
    color: {{ section.settings.btn_text_color }};
    padding: 12px 30px;
    text-decoration: none;
    font-size: 25px;
    font-weight: bold;
    border: 3px solid #fff;
    display: inline-block;
    transition: opacity 0.3s ease;
  }

  /* Floating Icon Styling */
  .trust-floating-icon-{{ section.id }} {
    position: absolute;
    width: {{ section.settings.icon_width }}px;
    z-index: 10;
    {{ section.settings.icon_vertical_pos }}: {{ section.settings.icon_vertical_dist }}px;
    {{ section.settings.icon_horizontal_pos }}: {{ section.settings.icon_horizontal_dist }}px;
  }

  /* Mobile Responsive Grid */
  @media screen and (max-width: 768px) {
    .trust-brand-grid { 
      flex-wrap: wrap; 
      width: 75%;
      margin: auto;
    }
    .trust-brand-item { 
      flex: 0 0 100%; 
      border-left: 2px solid #000000 !important; 
      border-right: 2px solid #000000 !important; 
      border-bottom: 2px solid #000000 !important;
      padding: 20px 10px;
    }
    /* Har doosre item se right border hatane ke liye mobile par */
    .trust-brand-item:nth-child(2n) { 
      border-bottom: none; 
      border-top: none;
    }
    .trust-brand-item:nth-child(3n) { 
      border-top: none;
    }
    .trust-brand-title {
      font-size: 30px;
    }
    .trust-floating-icon-{{ section.id }} {
        top: -25px;
        right: 10px;
    }
  }
{%- endstyle -%}

<section class="trust-trusted-brands-{{ section.id }}">
  <div class="trust-brand-container-full">
    
    {% if section.settings.floating_icon != blank %}
      <img src="{{ section.settings.floating_icon | img_url: '400x' }}" 
           class="trust-floating-icon-{{ section.id }}" 
           alt="floating icon">
    {% endif %}

    {% if section.settings.title != blank %}
        <h2 class="trust-brand-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="trust-brand-grid">
      {% for block in section.blocks %}
        <div class="trust-brand-item" {{ block.shopify_attributes }}>
          {% if block.settings.brand_logo != blank %}
            <img src="{{ block.settings.brand_logo | img_url: 'master' }}" 
                 class="trust-brand-img-{{ block.id }}"
                 alt="{{ block.settings.brand_logo.alt | escape }}"
                 loading="lazy">
          {% else %}
            {{ 'logo' | placeholder_svg_tag: 'trust-placeholder-svg' }}
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.btn_label != blank %}
      <div class="trust-brand-button-wrapper">
        <a href="{{ section.settings.btn_link }}" class="trust-brand-btn">
          {{ section.settings.btn_label }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

