      "default": 800
    },
    {
      "type": "image_picker",
      "id": "main_logo",
      "label": "Main Top Logo"
    },
    {
      "type": "textarea",
      "id": "headline",
      "label": "Headline Text",
      "default": "Australia’s first Online Warehouse Sale for Quality Brands"
    },
    {
      "type": "color",
      "id": "text_color_accent",
      "label": "Headline Color",
      "default": "#F6BDCC"
    },
    {
      "type": "textarea",
      "id": "sub_headline",
      "label": "Sub-headline Text",
      "default": "We’ll help you clear excess stock; discreetly, quickly and without damaging your brand image."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Let's Chat"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button BG Color",
      "default": "#f194ab"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "small_text",
      "label": "Small Caption Text",
      "default": "Book in a 20 minute discovery call"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0, "max": 200, "step": 10, "unit": "px",
      "label": "Top Padding", "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0, "max": 200, "step": 10, "unit": "px",
      "label": "Bottom Padding", "default": 80
    },
    {
      "type": "range",
      "id": "slider_speed",
      "min": 5, "max": 100, "step": 1, "unit": "s",
      "label": "Slider Speed", "default": 30
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_img",
          "label": "Brand Logo"
        },
        {
          "type": "number",
          "id": "brand_width",
          "label": "Desktop Logo Width (px)",
          "default": 120
        },
        {
          "type": "number",
          "id": "brand_width_mobile",
          "label": "Mobile Logo Width (px)",
          "default": 80
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Hero Section"
    }
  ]
}
{% endschema %}
